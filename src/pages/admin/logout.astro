---
// src/pages/admin/logout.astro
import "../../assets/app.css";

export const prerender = false;

const RESTAURANT_ID = import.meta.env.PUBLIC_DEFAULT_RESTAURANT_ID || 'rare-burger';

// Supprimer le cookie côté serveur
Astro.cookies.delete('admin_token', { path: '/' });
---

<!DOCTYPE html>
<html lang="fr" data-theme="autumn">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">
  <title>Déconnexion...</title>
  <link rel="icon" type="image/png" href="/favicon.ico" id="favicon">
  <style>
    body {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
      font-family: system-ui, -apple-system, sans-serif;
    }
    .loader {
      text-align: center;
    }
    .spinner {
      width: 40px;
      height: 40px;
      border: 4px solid #e5e7eb;
      border-top-color: #3b82f6;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
      margin: 0 auto 16px;
    }
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
  </style>
</head>
<body class="bg-base-200">
  <div class="loader">
    <div class="spinner"></div>
    <p>Déconnexion en cours...</p>
  </div>

  <script define:vars={{ RESTAURANT_ID }}>
    // Charger le thème
    async function loadConfig() {
      try {
        const response = await fetch(`https://api.rareburger.be/api/${RESTAURANT_ID}/config`);
        const config = await response.json();
        
        if (config.theme?.daisy) {
          document.documentElement.setAttribute('data-theme', config.theme.daisy);
        }
        
        if (config.theme?.logo) {
          const logoUrl = `https://api.rareburger.be/api/images/${RESTAURANT_ID}/${config.theme.logo}`;
          const favicon = document.getElementById('favicon');
          if (favicon) favicon.href = logoUrl;
        }
      } catch (error) {
        console.error('Erreur config:', error);
      }
    }

    loadConfig();

    // Nettoyer le localStorage
    localStorage.removeItem('admin_token');
    localStorage.removeItem('admin_restaurant');
    
    // Supprimer le cookie côté client aussi (par sécurité)
    document.cookie = 'admin_token=; path=/; max-age=0';
    
    // Rediriger vers la page de login
    setTimeout(() => {
      window.location.href = '/admin';
    }, 500);
  </script>
</body>
</html>