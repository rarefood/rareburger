---
// src/pages/index.astro
import '../assets/app.css';

const RESTAURANT_ID = import.meta.env.PUBLIC_DEFAULT_RESTAURANT_ID || 'rare-burger';
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bienvenue</title>
  <link rel="icon" type="image/png" href="/favicon.ico" id="favicon">
</head>

<body class="min-h-screen bg-base-200">
  
  <!-- Contenu principal -->
  <div class="hero min-h-screen">
    <div class="hero-content text-center">
      <div class="max-w-xl">
        
        <!-- Logo -->
        <div class="mb-8 flex justify-center">
          <img 
            src="/favicon.ico" 
            alt="Logo" 
            class="w-32 h-32 rounded-3xl shadow-2xl"
            id="heroLogo"
          />
        </div>

        <!-- Titre -->
        <h1 class="text-5xl font-bold mb-4" id="heroTitle">
          Bienvenue chez nous !
        </h1>

        <!-- Description -->
        <p class="text-lg mb-8 text-base-content/70" id="heroSubtitle">
          Envie de commander √† manger ? Nous suivre sur Instagram ? Les deux ! ü•∞
        </p>

        <!-- Boutons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/menu" class="btn btn-primary btn-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
            </svg>
            Voir le menu
          </a>

          <a 
            href="#" 
            id="instagramLink"
            target="_blank" 
            rel="noopener noreferrer" 
            class="btn btn-outline btn-lg"
            style="display: none;"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
            Suivre sur Instagram
          </a>
        </div>

      </div>
    </div>
  </div>

  <script define:vars={{ RESTAURANT_ID }}>
    // Charger la config et appliquer le th√®me
    async function loadConfig() {
      try {
        const response = await fetch(`https://api.rareburger.be/api/${RESTAURANT_ID}/config`);
        const config = await response.json();
        
        // Appliquer le th√®me
        if (config.theme?.daisy) {
          document.documentElement.setAttribute('data-theme', config.theme.daisy);
        }
        
        // Appliquer le logo
        if (config.theme?.logo) {
          const logoUrl = `https://api.rareburger.be/api/images/${RESTAURANT_ID}/${config.theme.logo}`;
          const favicon = document.getElementById('favicon');
          const heroLogo = document.getElementById('heroLogo');
          if (favicon) favicon.href = logoUrl;
          if (heroLogo) heroLogo.src = logoUrl;
        }
        
        // Appliquer le nom
        if (config.nom) {
          const title = document.getElementById('heroTitle');
          if (title) title.textContent = `Bienvenue chez ${config.nom} !`;
          document.title = `${config.nom} - Commandez en ligne`;
        }
        
        // Appliquer la description si elle existe
        if (config.description) {
          const subtitle = document.getElementById('heroSubtitle');
          if (subtitle) subtitle.textContent = config.description;
        }
        
        // Appliquer le lien Instagram
        if (config.reseaux_sociaux?.instagram) {
          const instagramLink = document.getElementById('instagramLink');
          if (instagramLink) {
            instagramLink.href = config.reseaux_sociaux.instagram;
            instagramLink.style.display = 'inline-flex';
          }
        }
        
      } catch (error) {
        console.error('Erreur chargement config:', error);
        // Appliquer un th√®me par d√©faut en cas d'erreur
        document.documentElement.setAttribute('data-theme', 'autumn');
      }
    }

    // Charger imm√©diatement
    loadConfig();
  </script>

</body>
</html>